<?xml version='1.0' encoding='utf-8'?>
<widget id="bitmi.com.br" version="0.0.7" versionCode = "170" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BitMi</name>
    <description>
        Trade Bot
    </description>
    <author email="contato@mitz.com.br" href="https://bitmi.com.br">
        Mitz Tecnology
    </author>
    <content src="index.html" />
    <splash src="assets/icons/512.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="assets/icons/512.png"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="www\assets\images\logos\icon.png" platform="ios" width="57" height="57" density="mdpi" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
